# Server Configuration
NODE_ENV=development
PORT=3001

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# Database Configuration (for future use)
DATABASE_URL=postgresql://username:password@localhost:5432/spectrum_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=spectrum_db
DB_USER=spectrum_user
DB_PASSWORD=your_secure_password

# Authentication (for future use)
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRES_IN=7d

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/svg+xml,application/json

# External Services (for future use)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=spectrum-assets

# Redis Configuration (for future use)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# Analytics Configuration
ANALYTICS_ENABLED=true
ANALYTICS_RETENTION_DAYS=365

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Security
HELMET_ENABLED=true
COMPRESSION_ENABLED=true

# API Documentation
API_DOCS_ENABLED=true
API_DOCS_PATH=/api-docs

# Development Settings
DEBUG=true
MOCK_DATA=true